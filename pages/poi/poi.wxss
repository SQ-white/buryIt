/**index.wxss**/

.header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  flex: 1;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  color: #9b9b9b;
}

.header .add {
  width: 40rpx;
  margin-right: 10rpx;
  color: #7ed321;
  font-size: 40rpx;
  font-weight: bold;
}

.header .choose-position {
  flex: 1;
  font-size: 30rpx;
}

.text_box {
  margin: 10px 25px;
  border-bottom: 1px solid #c3c3c3;
  padding-bottom: 10px;
}

.map_container{
  position: absolute;
  top: 130rpx;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}

.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -1rpx;
  height: 160rpx;
  background: #fff;
  padding: 0 15px;
}

text{
  margin: 5px 0;
  display: block;
  font-size:12px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.h1{
  margin: 15px 0;
  font-size:15px;
}
