.header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  flex: 1;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  color: #9b9b9b;
}

.header .add {
  width: 40rpx;
  margin-right: 10rpx;
  color: #7ed321;
  font-size: 40rpx;
  font-weight: bold;
}

.header .choose-position {
  flex: 1;
  font-size: 30rpx;
}

.header .choose {
  width: 120rpx;
  padding-left: 10px;
  font-size: 30rpx;
  color: #7ed321;
}

.text_box {
  margin: 10px 25px;
  border-bottom: 1px solid #c3c3c3;
  padding-bottom: 10px;
}
